{

  "manifest_version": 2,

  "name": "Sonic Toolkit",

  "web_accessible_resources": [
    "fonts/*",
    "img/*",
    "js/*",
    "css/*",
    "icons/*"
  ],

  "description": "My personal extension for bending the web to my will.",
  "version": "2.0.0",

  "browser_action": {
    "default_icon": "icons/64-sonic.png",
    "default_title": "Toolkit Options"
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "cookies",
    "activeTab",
    "storage",
    "tabs",
    "history",
    "webNavigation",
    "contextMenus",
    "clipboardWrite",
    "clipboardRead",
    "http://*/*",
    "https://*/*",
    "*://*/*",
    "*://*.google.com/*",
    "notifications",
    "alarms",
    "file:///*"
  ],

  "icons": {
    "192": "icons/192-sonic.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*.trello.com/*"],
      "js": ["js/global.js", "js/libs/arrive.js", "js/libs/alertify.js", "js/libs/keymaster.js", "js/trello.js"]
    },
        {
          "matches": ["*://*.trello.com/*"],
          "css": ["css/global_styles.css", "css/trello-styles.css", "css/libs/alertify.css"],
          "run_at": "document_start"
        },
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["js/toolkit.js"]
    },



    {
      "matches": ["*://miasf-member-mgt-center.wildapricot.org/widget/directory/*"],
      "js": ["js/tonya/miasf-1.js"]
    },
    {
      "matches": ["*://miasf-member-mgt-center.wildapricot.org/widget/Sys/*"],
      "js": ["js/tonya/miasf-2.js"]
    },
    {
      "matches": ["*://www.nmdaonline.com/member-directory/*"],
      "js": ["js/tonya/nmda.js"]
    },
    {
      "matches": ["*://*.istockphoto.com/search/*", "*://*.istockphoto.com/photos/*"],
      "js": ["js/global.js", "js/libs/arrive.js", "js/istockphoto/istockphoto.js"]
    },



    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["js/global.js", "js/libs/arrive.js", "js/youtube/youtube.js"]
    }
  ]

}
